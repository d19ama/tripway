{
  "name": "tripway",
  "scripts": {
    "preset": "npm i && cd frontend && npm i && cd ../backend && npm i",
    "ci": "npm i && run-p ci:frontend ci:backend",
    "ci:frontend": "cd frontend && npm ci",
    "ci:backend": "cd backend && npm ci",
    "api-gen": "run-s api-gen:backend api-gen:frontend",
    "api-gen:frontend": "cd frontend && npm run generate-api",
    "api-gen:backend": "cd backend && npm run swagger:generate",
    "dev": "run-p dev:**",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "lint": "cd frontend && npm run lint && cd ../backend && npm run lint",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check"
  },
  "devDependencies": {
    "npm-run-all2": "^6.2.0"
  }
}
